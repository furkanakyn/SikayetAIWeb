@model SikayetAIWeb.Models.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = "_Layout"; // _Layout dosyasını kullanmasını sağlar
}

<div class="auth-page d-flex justify-content-center align-items-center">
    <div class="auth-card card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0"><i class="fas fa-sign-in-alt me-2"></i> Giriş Yap</h3>
        </div>
        <div class="card-body p-4">

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">@ViewBag.Error</div>
            }

            <form asp-action="Login" asp-controller="Auth" method="post" class="auth-form">
                <div class="mb-3">
                    <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                    <input asp-for="Username" type="text" class="form-control form-control-lg" placeholder="Kullanıcı adınızı girin" required>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Şifre</label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Şifrenizi girin" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                </div>
            </form>

            <div class="text-center mt-3">
                <p class="mb-0">
                    Hesabınız yok mu?
                    <a asp-action="Register" asp-controller="Auth" class="fw-bold text-primary">Kayıt Ol</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
