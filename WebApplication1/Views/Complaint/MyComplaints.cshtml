@model IEnumerable<Complaint>
@using System.Globalization

@{
    ViewData["Title"] = "Şikayetlerim";
}

<div class="container py-5 complaint-list-page">
    <h2 class="text-center mb-4 section-heading">
        <i class="fas fa-list-alt me-2"></i> @ViewData["Title"]
    </h2>
    <hr class="section-divider mb-5">

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm p-4 rounded-lg animate__animated animate__fadeInUp">
            <i class="fas fa-info-circle me-2"></i> Henüz hiç şikayet oluşturmadınız.
            <br>
            <a asp-controller="Complaint" asp-action="Create" class="alert-link mt-2 d-inline-block fw-bold">Yeni şikayet oluşturmak için tıklayın</a>
        </div>
    }
    else
    {
        <div class="row g-4 justify-content-center">
            @foreach (var complaint in Model)
            {
                <div class="col-lg-6 col-md-8 col-sm-10 mb-4 animate__animated animate__fadeInUp">
                    <div class="card complaint-card h-100 shadow-hover">
                        <div class="card-header d-flex justify-content-between align-items-center bg-transparent border-bottom-0 pb-0">
                            <h5 class="fw-bold text-primary mb-0">@complaint.Title</h5>
                            <span class="badge @GetStatusClass(complaint.Status.ToString()) status-badge">
                                @complaint.Status
                            </span>
                        </div>
                        <div class="card-body pt-2">
                            <p class="card-text text-medium mb-3">@complaint.Description</p>
                            <div class="d-flex justify-content-between text-muted small">
                                <span class="text-dark fw-semibold"><i class="fas fa-tag me-1"></i> @complaint.Category</span>
                                <span class="text-medium">
                                    <i class="fas fa-calendar-alt me-1"></i>
                                    @complaint.CreatedAt.ToString("dd MMM yyyy", CultureInfo.GetCultureInfo("tr-TR"))
                                </span>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 pt-0 text-end">
                            <a asp-action="Details" asp-route-id="@complaint.ComplaintId" class="btn btn-sm btn-outline-primary-custom">
                                <i class="fas fa-info-circle me-1"></i> Detayları Görüntüle
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@functions {
    public enum ComplaintStatus
    {
        Pending,
        InProgress,
        Resolved,
        Rejected
    }

    string GetStatusClass(string status)
    {
        // Veritabanındaki string değeri enum'a çevir
        if (!Enum.TryParse<ComplaintStatus>(ToPascalCase(status), out var parsedStatus))
        {
            parsedStatus = ComplaintStatus.Pending;
        }

        return parsedStatus switch
        {
            ComplaintStatus.Pending => "bg-secondary text-dark",
            ComplaintStatus.InProgress => "bg-warning text-dark",
            ComplaintStatus.Resolved => "bg-success text-light",
            ComplaintStatus.Rejected => "bg-danger text-light",
            _ => "bg-secondary text-dark"
        };
    }

    string ToPascalCase(string input)
    {
        if (string.IsNullOrEmpty(input)) return input;
        var parts = input.Split(new[] { '_', ' ' }, StringSplitOptions.RemoveEmptyEntries);
        return string.Concat(parts.Select(p => char.ToUpper(p[0]) + p.Substring(1).ToLower()));
    }
}

@section Scripts {
    <script>
        // Şikayet kartlarına animasyon ekle
        document.addEventListener('DOMContentLoaded', function() {
            const complaintCards = document.querySelectorAll('.complaint-card');
            complaintCards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.05}s`;
                card.classList.add('animate__fadeInUp');
            });
        });
    </script>
}