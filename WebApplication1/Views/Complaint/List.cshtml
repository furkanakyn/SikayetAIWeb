@model IEnumerable<Complaint>

@{
    ViewData["Title"] = "Şikayetlerim";
}

<h3 class="page-title">@ViewData["Title"]</h3>
<hr>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Henüz hiç şikayet oluşturmadınız.
        <a asp-action="Create" class="alert-link">Yeni şikayet oluşturmak için tıklayın</a>
    </div>
}
else
{
    <div class="row">
        @foreach (var complaint in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card complaint-card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="fw-bold">@complaint.Title</span>
                        <span class="badge @GetStatusClass(complaint.Status.ToString()) status-badge">
                            @complaint.Status
                        </span>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@complaint.Description</p>
                        <div class="d-flex justify-content-between text-muted small">
                            <span>@complaint.Category</span>
                            <span>@complaint.CreatedAt.ToString("dd MMM yyyy")</span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <a asp-action="Details" asp-route-id="@complaint.ComplaintId" class="btn btn-sm btn-outline-primary">
                            Detayları Görüntüle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@functions {
    string GetStatusClass(string status)
    {
        if (!Enum.TryParse<ComplaintStatus>(status, ignoreCase: true, out var parsedStatus))
        {
            parsedStatus = ComplaintStatus.pending;
        }

        return parsedStatus switch
        {
            ComplaintStatus.pending => "bg-secondary",
            ComplaintStatus.in_progress => "bg-warning text-dark",
            ComplaintStatus.resolved => "bg-success",
            ComplaintStatus.rejected => "bg-danger",
            _ => "bg-secondary"
        };
    }
}