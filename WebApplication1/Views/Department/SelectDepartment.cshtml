@{
    ViewData["Title"] = "Departman Seçimi";
    var categories = ViewBag.Categories as List<string>;
}

<div class="container py-5">
    <div class="card shadow-lg">
        <div class="card-header text-center">
            <h3>Departman Seçimi</h3>
        </div>
        <div class="card-body text-center">
            <form asp-action="SelectDepartment" method="post">
                <div class="mb-3">
                    <label class="form-label">Sorumlu olduğunuz kategori</label>
                    <select name="categoryName" class="form-control" required>
                        <option value="">-- Seçiniz --</option>
                        @foreach (var cat in categories)
                        {
                            <option value="@cat">@cat</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Kaydet</button>
            </form>
        </div>
    </div>
</div>
