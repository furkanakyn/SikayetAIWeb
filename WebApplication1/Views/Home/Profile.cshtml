@{
    ViewData["Title"] = "Profilim";
    Layout = "_Layout";
}

<div class="auth-page d-flex justify-content-center align-items-center">
    <div class="auth-card card shadow-lg border-0 text-center p-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-user-circle me-2"></i> Profilim</h3>
        </div>
        <div class="card-body p-4">
            <p class="lead mb-4">Hoş geldiniz, @Context.Session.GetString("FullName")!</p>
            <p>Kullanıcı Adı: <strong>@Context.Session.GetString("Username")</strong></p>
            <p>Kullanıcı Türü: <strong>@Context.Session.GetString("UserType")</strong></p>

            <div class="d-grid gap-2 mt-4">
                <a asp-action="ProfileSettings" asp-controller="Home" class="btn btn-primary-filled">Profil Ayarları</a>
                <a asp-controller="Complaint" asp-action="MyComplaints" class="btn btn-secondary-outline">Şikayetlerim</a>
                <a asp-action="Logout" asp-controller="Auth" class="btn btn-link text-danger mt-3">Çıkış Yap</a>
            </div>
        </div>
    </div>
</div>