@model SikayetAIWeb.Models.Complaint
@{
    ViewData["Title"] = "Şikayet Detayları";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0">Şikayet Detayları - ID: @Model.ComplaintId</h4>
            </div>
            <div class="card-body">
                
                @if (Model.User != null)
                {
                    <p><strong>Gönderen:</strong> @Model.User.FullName (@Model.User.Email)</p>
                }
                else
                {
                    <p><strong>Gönderen:</strong> Bilinmiyor</p>
                }

                
                <p><strong>Konu:</strong> @Model.Title</p>
                <p><strong>Tarih:</strong> @Model.CreatedAt.ToString("dd MMMM yyyy HH:mm")</p>
                <p><strong>Kategori:</strong> <span class="badge bg-secondary">@Model.Category</span></p>
                <p><strong>Durum:</strong> <span class="badge bg-warning">@Model.Status</span></p>
                <hr />
                <p><strong>Şikayet Metni:</strong></p>
                <p>@Model.Description</p>

            </div>
            <div class="card-footer d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Geri Dön
                </a>
                <a asp-action="Edit" asp-route-id="@Model.ComplaintId" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Durumu Güncelle
                </a>
            </div>
        </div>
    </div>
</div>