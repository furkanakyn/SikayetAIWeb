@model List<SikayetAIWeb.Models.Complaint>
@{
    ViewData["Title"] = "Şikayetler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Şikayet Yönetimi</h1>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Tüm Şikayetler</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Gönderen</th>
                            <th>Kategori</th>
                            <th>Durum</th>
                            <th>Tarih</th>
                            <th>İşlem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var complaint in Model)
                            {
                                <tr>
                                    <td>@complaint.Title</td>
                                    <td>@(complaint.User?.FullName ?? "Bilinmiyor")</td>
                                    <td>@complaint.Category</td>
                                    <td>
                                        @{
                                            string statusClass = complaint.Status switch
                                            {
                                                ComplaintStatus.pending => "bg-warning text-dark",
                                                ComplaintStatus.in_progress => "bg-info text-white",
                                                ComplaintStatus.resolved => "bg-success text-white",
                                                ComplaintStatus.rejected => "bg-danger text-white",
                                                _ => "bg-secondary text-white",
                                            };
                                        }
                                        <span class="badge @statusClass">@complaint.Status</span>
                                    </td>
                                    <td>@complaint.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Complaints" asp-action="Details" asp-route-id="@complaint.ComplaintId" class="btn btn-sm btn-info me-2"><i class="fas fa-eye"></i></a>
                                        <a asp-area="Admin" asp-controller="Complaints" asp-action="Edit" asp-route-id="@complaint.ComplaintId" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Henüz şikayet bulunmuyor.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>