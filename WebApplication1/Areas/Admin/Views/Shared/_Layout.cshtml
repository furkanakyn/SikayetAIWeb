@using System.Security.Claims

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Paneli</title>

    <!-- Google Fonts ve Font Awesome Entegrasyonu -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Rubik:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <style>
        /*
                 * YENİ ADMIN PANEL CSS
                 * Mevcut HTML yapısına dokunmadan, daha modern ve profesyonel bir görünüm için revize edilmiştir.
                 */

        /* --- Genel Değişkenler ve Temel Ayarlar --- */
        :root {
            /* Renk paleti: Koyu ve açık tonların dengeli kullanımı */
            --bg-primary: #f5f6f8; /* Açık gri sayfa arka planı */
            --bg-secondary: #ffffff; /* Beyaz kart ve ana içerik arka planı */
            --accent-dark: #2c3e50; /* Koyu lacivert sidebar ve ana vurgu */
            --accent-light: #34495e; /* Sidebar hover rengi */
            --accent-gradient-start: #34495e; /* Sidebar gradient başlangıcı */
            --accent-gradient-end: #2c3e50; /* Sidebar gradient bitişi */
            --accent-danger: #e74c3c; /* Tehlike renkleri için kırmızı */
            --text-dark: #34495e; /* Ana metin rengi */
            --text-medium: #7f8c8d; /* İkincil metin ve ipucu rengi */
            --text-light: #ecf0f1; /* Açık metin (koyu arka planda) */
            --border-color: rgba(0, 0, 0, 0.08); /* Yumuşak kenarlık rengi */
            --shadow-light: rgba(0, 0, 0, 0.05); /* Hafif gölge */
            --shadow-medium: rgba(0, 0, 0, 0.1); /* Orta seviye gölge */
            --shadow-strong: rgba(0, 0, 0, 0.2); /* Güçlü gölge */
            --shadow-inset: rgba(0, 0, 0, 0.02);
            --font-heading: 'Rubik', sans-serif;
            --font-body: 'Inter', sans-serif;
            --transition-speed: 0.4s; /* Geçiş hızı */
            --transition-ease: cubic-bezier(0.25, 0.8, 0.25, 1); /* Yumuşak geçiş eğrisi */
        }

        body {
            font-family: var(--font-body);
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            color: var(--text-dark);
            background-color: var(--bg-primary);
            display: block;
            line-height: 1.6;
        }

        /* --- Admin Layout --- */
        .admin-layout {
            display: flex;
            min-height: 100vh;
            overflow-x: hidden; /* Yatay kaydırmayı engelleme */
        }

        /* --- Sidebar (Sol Menü) --- */
        .sidebar {
            width: 18rem;
            flex-shrink: 0;
            background: var(--accent-dark);
            color: var(--text-light);
            box-shadow: 4px 0 15px var(--shadow-medium);
            position: sticky;
            top: 0;
            height: 100vh;
            overflow-y: auto; /* Dikeyde kaydırılabilir */
        }

            .sidebar .nav-link {
                color: rgba(255, 255, 255, 0.7);
                padding: 1rem 1.5rem;
                display: flex;
                align-items: center;
                transition: all var(--transition-speed) var(--transition-ease);
                position: relative;
            }

                .sidebar .nav-link:hover {
                    color: var(--text-light);
                    background-color: var(--accent-light);
                }

            .sidebar .nav-item.active .nav-link {
                color: var(--text-light);
                background-color: var(--accent-light);
                border-left: 5px solid var(--text-light);
                font-weight: 600;
                box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.1); /* İç gölge efekti */
            }

            .sidebar .nav-link i {
                margin-right: 1rem;
                font-size: 1.1rem;
            }

        .sidebar-brand-text {
            font-family: var(--font-heading);
            font-weight: 700 !important;
            font-size: 1.5rem;
            color: var(--text-light);
            letter-spacing: 0.5px;
        }

        .sidebar-divider {
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar-heading {
            color: rgba(255, 255, 255, 0.4);
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-weight: 600;
        }

        /* --- Ana İçerik (Sağ Bölüm) --- */
        .main-content {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            background-color: var(--bg-primary);
        }

        .topbar {
            background-color: var(--bg-secondary);
            box-shadow: 0 2px 10px var(--shadow-light);
            border-bottom: 1px solid var(--border-color);
            padding: 1rem 2rem;
        }

        .page-content {
            padding: 2rem;
            flex-grow: 1;
        }

        /* --- Kartlar --- */
        .card {
            background-color: var(--bg-secondary);
            border-radius: 12px;
            box-shadow: 0 4px 20px var(--shadow-light);
            border: 1px solid var(--border-color);
            transition: transform var(--transition-speed) var(--transition-ease), box-shadow var(--transition-speed) var(--transition-ease);
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px var(--shadow-medium);
            }

        .card-header {
            background-color: var(--bg-primary);
            border-bottom: 1px solid var(--border-color);
            border-radius: 12px 12px 0 0;
            padding: 1.25rem 1.5rem;
        }

        /* --- Düğmeler --- */
        .btn {
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all var(--transition-speed) var(--transition-ease);
        }

        .btn-primary-filled {
            background-color: var(--accent-dark);
            color: var(--text-light);
            border-color: var(--accent-dark);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            .btn-primary-filled:hover {
                background-color: var(--accent-light);
                border-color: var(--accent-light);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
                transform: translateY(-2px);
            }

        .btn-secondary-outline {
            background-color: transparent;
            color: var(--accent-dark);
            border: 2px solid var(--accent-dark);
        }

            .btn-secondary-outline:hover {
                background-color: var(--accent-dark);
                color: var(--text-light);
                border-color: var(--accent-dark);
                transform: translateY(-2px);
            }

        .btn-link {
            color: var(--accent-dark);
            text-decoration: none;
            transition: color var(--transition-speed) var(--transition-ease);
        }

            .btn-link:hover {
                color: var(--accent-light);
            }

        /* Responsive Düzenlemeler */
     
    </style>
</head>
<body>
    <div class="admin-layout">
        <ul class="navbar-nav sidebar" id="accordionSidebar">
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-area="Admin" asp-controller="Home" asp-action="Index">
                <div class="sidebar-brand-text mx-3 font-weight-bold">Admin Paneli</div>
            </a>
            <hr class="sidebar-divider my-0">

            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">
                <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home"></i><span>Anasayfa</span>
                </a>
            </li>

            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Dashboard" ? "active" : "")">
                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-tachometer-alt"></i><span>Dashboard</span>
                </a>
            </li>

            <hr class="sidebar-divider">
            <div class="sidebar-heading px-4">Yönetim</div>

            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Complaints" ? "active" : "")">
                <a class="nav-link" asp-area="Admin" asp-controller="Complaints" asp-action="Index">
                    <i class="fas fa-comments"></i><span>Şikayetler</span>
                </a>
            </li>

            <li class="nav-item @(ViewContext.RouteData.Values["Controller"].ToString() == "Users" ? "active" : "")">
                <a class="nav-link" asp-area="Admin" asp-controller="Users" asp-action="Index">
                    <i class="fas fa-users"></i><span>Kullanıcılar</span>
                </a>
            </li>

            <hr class="sidebar-divider d-none d-md-block">
        </ul>
        <div class="main-content">
            <nav class="navbar navbar-expand navbar-light topbar mb-4 static-top">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown no-arrow">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="nav-link d-flex align-items-center">
                                <span class="d-none d-lg-inline text-gray-600 me-3">Hoşgeldin, <b>@User.FindFirstValue("FullName")</b></span>
                                <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-primary-filled">Çıkış Yap</button>
                                </form>
                            </span>
                        }
                    </li>
                </ul>
            </nav>
            <div class="container-fluid page-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
