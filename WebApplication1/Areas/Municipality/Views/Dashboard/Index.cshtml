@model SikayetAIWeb.ViewModels.MunicipalityDashboardViewModel

@{
    ViewData["Title"] = "Belediye Paneli";
    Layout = "~/Areas/Municipality/Views/Shared/_Layout.cshtml";
}

<style>
    /*
         * DASHBOARD SAYFASI İÇİN ÖZEL CSS STİLLERİ
         */

    .dashboard-header {
        background-color: var(--bg-secondary);
        border-radius: 12px;
        box-shadow: 0 4px 20px var(--shadow-light);
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid var(--border-color);
        display: flex;
        align-items: center;
    }

        .dashboard-header .icon {
            color: var(--accent-dark);
            margin-right: 1rem;
        }

    .dashboard-card {
        border-radius: 12px;
        box-shadow: 0 4px 15px var(--shadow-light);
        border: none;
        overflow: hidden;
        transition: all 0.3s ease-in-out;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px var(--shadow-medium);
        }

        .dashboard-card .card-body {
            background: var(--accent-dark);
            color: white;
            padding: 2rem;
        }

            .dashboard-card .card-body h5 {
                font-weight: 500;
                opacity: 0.8;
            }

        .dashboard-card .card-footer {
            background-color: var(--accent-light);
            color: white;
            border-top: none;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
        }

            .dashboard-card .card-footer a {
                text-decoration: none;
                color: white;
                transition: all 0.2s ease-in-out;
            }

                .dashboard-card .card-footer a:hover {
                    color: rgba(255, 255, 255, 0.8);
                }

            .dashboard-card .card-footer i {
                transition: transform 0.2s ease-in-out;
            }

        .dashboard-card:hover .card-footer i {
            transform: translateX(5px);
        }

    .recent-complaints-table .card-header h6 {
        color: var(--text-dark);
    }

    .recent-complaints-table .table {
        margin-bottom: 0;
        border-radius: 0 0 12px 12px;
        overflow: hidden;
    }

    .recent-complaints-table thead {
        background-color: var(--bg-primary);
    }

    .recent-complaints-table th {
        color: var(--text-dark);
        font-weight: 600;
        border-top: none !important;
        padding: 1rem 1.5rem;
    }

    .recent-complaints-table td {
        padding: 1rem 1.5rem;
        vertical-align: middle;
        font-weight: 400;
        border-color: var(--border-color);
    }

    .status-badge {
        font-size: 0.875em;
        font-weight: 500;
        padding: 0.3em 0.8em;
        border-radius: 1rem;
    }

    .status-badge-pending {
        background-color: #f0ad4e;
        color: white;
    }
</style>

<!-- Sayfa Başlığı ve Açıklaması -->
<div class="dashboard-header mb-4">
    <div class="icon">
        <i class="fas fa-tachometer-alt fa-3x"></i>
    </div>
    <div>
        <h1 class="h3 mb-1 text-dark">Belediye Çalışanı Paneli</h1>
        <p class="mb-0 text-medium">Önemli istatistiklere ve bekleyen son şikayetlere genel bir bakış.</p>
    </div>
</div>

<div class="row">
    <!-- Yeni Şikayetler Kartı -->
    <div class="col-md-4 mb-4">
        <div class="card dashboard-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title text-light">Yeni Şikayetler</h5>
                        <h2 class="card-text text-light">@Model.TotalComplaintsCount</h2>
                    </div>
                    <i class="fas fa-file-alt fa-3x text-light opacity-75"></i>
                </div>
            </div>
            <a class="card-footer d-flex align-items-center justify-content-between" asp-area="Municipality" asp-controller="Complaints" asp-action="Index">
                <span class="small text-white">Tümünü Gör</span>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </a>
        </div>
    </div>
</div>

<!-- Bekleyen Şikayetler Tablosu -->
<div class="mt-4">
    <div class="card shadow recent-complaints-table">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold">Bekleyen Son Şikayetler</h6>
        </div>
        @if (Model.RecentComplaints != null && Model.RecentComplaints.Any())
        {
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var complaint in Model.RecentComplaints)
                        {
                            <tr>
                                <td>@complaint.Title</td>
                                <td>@complaint.CreatedAt.ToShortDateString()</td>
                                <td><span class="status-badge status-badge-pending">@complaint.Status</span></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="card-body">
                <p class="text-medium text-center mb-0">Departmanınıza ait yeni şikayet bulunmamaktadır.</p>
            </div>
        }
    </div>
</div>
