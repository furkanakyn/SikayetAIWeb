@using System.Security.Claims

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Belediye Paneli</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Rubik:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        :root {
            --bg-primary: #f5f6f8;
            --bg-secondary: #ffffff;
            --accent-dark: #2c3e50;
            --accent-light: #34495e;
            --text-dark: #34495e;
            --text-medium: #7f8c8d;
            --text-light: #ecf0f1;
            --border-color: rgba(0, 0, 0, 0.08);
            --shadow-light: rgba(0, 0, 0, 0.05);
            --shadow-medium: rgba(0, 0, 0, 0.1);
            --font-heading: 'Rubik', sans-serif;
            --font-body: 'Inter', sans-serif;
            --transition-speed: 0.4s;
            --transition-ease: cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        body {
            font-family: var(--font-body);
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            color: var(--text-dark);
            background-color: var(--bg-primary);
            line-height: 1.6;
        }

        .page-wrapper {
            display: flex;
        }

        #sidebar {
            width: 250px;
            height: 100vh;
            background-color: var(--accent-dark);
            color: var(--text-light);
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            overflow-y: auto;
            box-shadow: 4px 0 15px var(--shadow-medium);
            padding-top: 5rem;
            transition: all var(--transition-speed) var(--transition-ease);
        }

        .sidebar-brand {
            font-family: var(--font-heading);
            font-weight: 700;
            font-size: 1.5rem;
            letter-spacing: 0.5px;
            text-decoration: none;
            color: var(--text-light);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem 0;
        }

        #sidebar .nav-link {
            color: rgba(255, 255, 255, 0.7);
            padding: 1rem 1.5rem;
            display: flex;
            align-items: center;
            transition: all var(--transition-speed) var(--transition-ease);
        }

            #sidebar .nav-link:hover {
                color: var(--text-light);
                background-color: var(--accent-light);
            }

            #sidebar .nav-link.active {
                color: var(--text-light);
                background-color: var(--accent-light);
                border-left: 5px solid var(--text-light);
                font-weight: 600;
                box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.1);
            }

            #sidebar .nav-link i {
                margin-right: 1rem;
                font-size: 1.1rem;
            }

        #main-wrapper {
            margin-left: 250px;
            flex-grow: 1;
            padding-top: 5rem;
            transition: margin-left var(--transition-speed) var(--transition-ease);
        }

        #content {
            padding: 2rem;
        }

        .navbar {
            background-color: var(--bg-secondary) !important;
            box-shadow: 0 2px 10px var(--shadow-light);
            border-bottom: 1px solid var(--border-color);
            position: fixed;
            top: 0;
            left: 250px;
            right: 0;
            z-index: 1001;
            transition: left var(--transition-speed) var(--transition-ease);
        }

            .navbar .navbar-brand, .navbar .navbar-text {
                color: var(--text-dark) !important;
                font-weight: 600;
            }

            .navbar .btn {
                padding: 0.5rem 1rem;
                font-size: 0.875rem;
                font-weight: 600;
            }

        .btn-outline-danger {
            color: #e74c3c;
            border-color: #e74c3c;
            transition: all var(--transition-speed) var(--transition-ease);
        }

            .btn-outline-danger:hover {
                background-color: #e74c3c;
                color: var(--text-light);
            }

        .card {
            border-radius: 12px;
            border: 1px solid var(--border-color);
            box-shadow: 0 4px 20px var(--shadow-light);
        }

        .card-header {
            background-color: var(--bg-primary);
            border-bottom: 1px solid var(--border-color);
            border-radius: 12px 12px 0 0;
            padding: 1.25rem 1.5rem;
        }

        .badge-counter {
            position: absolute;
            top: 5px;
            right: 5px;
            font-size: 0.6rem;
            padding: .3rem .5rem;
            border-radius: 10rem;
            line-height: 1;
            transform: translate(50%, -50%);
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <div id="sidebar">
            <a class="sidebar-brand text-decoration-none" href="#">
                <i class="fas fa-city me-2"></i> Belediye Paneli
            </a>
            <hr class="sidebar-divider my-0">
            <ul class="nav flex-column mt-3">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Dashboard" ? "active" : "")" asp-area="Municipality" asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-tachometer-alt me-2"></i> Yönetim Paneli
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Complaints" ? "active" : "")" asp-area="Municipality" asp-controller="Complaints" asp-action="Index">
                        <i class="fas fa-file-alt me-2"></i> Şikayetler
                    </a>
                </li>
                <li class="nav-item position-relative">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Messages" ? "active" : "")" asp-area="Municipality" asp-controller="Messages" asp-action="Index">
                        <i class="fas fa-comments me-2"></i> Mesajlaşma
                        <span id="message-badge" class="badge bg-danger rounded-pill badge-counter" style="display: none;"></span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "UserProfile" ? "active" : "")" asp-area="Municipality" asp-controller="UserProfile" asp-action="Index">
                        <i class="fas fa-user-circle me-2"></i> Profilim
                    </a>
                </li>
            </ul>
        </div>

        <div id="main-wrapper">
            <nav class="navbar navbar-expand navbar-light topbar static-top">
                <div class="container-fluid">
                    <a class="navbar-brand me-auto d-none d-lg-block" href="#">
                        <i class="fas fa-city me-2"></i> Belediye Paneli
                    </a>
                    <div class="ms-auto d-flex align-items-center">
                        <span class="navbar-text me-3 d-none d-lg-block">
                            Hoşgeldin, <b>@User.FindFirstValue("FullName")</b>
                        </span>
                        <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="fas fa-sign-out-alt"></i> Çıkış
                            </button>
                        </form>
                    </div>
                </div>
            </nav>
            <div id="content">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        function updateMessageCount() {
            $.ajax({
                url: '@Url.Action("GetUnreadMessageCount", "Messages", new { area = "Municipality" })',
                type: 'GET',
                success: function(response) {
                    var count = response.count;
                    var badge = $('#message-badge');

                    if (count > 0) {
                        badge.text(count);
                        badge.show();
                    } else {
                        badge.hide();
                    }
                },
                error: function(xhr, status, error) {
                    console.error("Okunmamış mesaj sayısı alınırken hata oluştu.");
                }
            });
        }

        // Sayfa yüklendiğinde ve her 10 saniyede bir kontrol et
        $(document).ready(function() {
            updateMessageCount();
            setInterval(updateMessageCount, 10000);
        });
    </script>
</body>
</html>